{% extends "layout.html.twig" %}
{% block titre_page %}Axolit - Contact{% endblock %}

{% block accueil %} class="btn btn-rose "{% endblock %}
{% block vendre %}class="btn btn-rose "{% endblock %}
{% block acheter %}class="btn btn-rose "{% endblock %}
{% block reparer %}class="btn btn-rose "{% endblock %}
{% block contenu %}

        <div class="container">
            <div class="card">
                <div class="card-header">
                    Contact
                </div>

                <div class="card-body">
                    <form>
                    <div class="form-group row">
                        <label for="nom" class="col-form-label col-sm-6 col-md-2 offset-md-3">Nom :</label>
                        <div class="col-sm-6 col-md-4">
                            <input class="form-control" type="text" name="nom" placeholder="Nom" required="Veuillez renseigner ce champ">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-form-label col-sm-6 col-md-2 offset-md-3">E-mail :</label>
                        <div class="col-sm-6 col-md-4">
                            <input type="email" class="form-control" name="mail" placeholder="nom@exemple.com" required="Veuillez renseigner ce champ">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="sujet" class="col-form-label col-sm-6 col-md-2 offset-md-3">Sujet :</label>
                        <div class="col-sm-6 col-md-4">
                            <input class="form-control" type="sujet" name="nom" placeholder="Exemple de sujet" required="Veuillez renseigner ce champ">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="checkbox" class="col-form-label col-sm-6 col-md-2 offset-md-3">Choix optionnel :</label>
                        <div class="col-sm-6 col-md-4" style="text-align: left;">
                            <input type="checkbox" name="checkbox1" value="Vendre"> Vendre<br>
                            <input type="checkbox" name="checkbox2" value="Vendeur"> Vendeur<br>
                            <input type="checkbox" name="checkbox3" value="Acheter"> Acheter<br>
                            <input type="checkbox" name="checkbox4" value="Acheteur"> Acheteur<br>
                            <input type="checkbox" name="checkbox5" value="Réparer"> Réparer<br>
                            <input type="checkbox" name="checkbox6" value="Réparateur"> Réparateur
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="textemessage" class="col-form-label col-sm-6 col-md-2 offset-md-3">Message :</label>
                        <div class="col-sm-6 col-md-4">
                            <textarea class="form-control" rows="5" name="textemessage" placeholder="Ecrire un message" required="Veuillez renseigner ce champ"></textarea>
                        </div>
                    </div>
            
                    <div class="text-center">
                        <button type="submit" name="bouton envoie message" class="btn btn-rose btn-primary">Envoyer un message</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>


{% endblock %}
{% extends "layout.html.twig" %}
{% block titre_page %}
	Axolit - Acheter
{% endblock %}
{% block link_css %}
	<link href="{{ asset('./css/liste_produits.css') }}" rel="stylesheet">
{% endblock %}

{% block accueil %}
	class="btn btn-rose "
{% endblock %}
{% block vendre %}
	class="btn btn-rose "
{% endblock %}
{% block acheter %}
	class="btn btn-rose active"
{% endblock %}
{% block reparer %}
	class="btn btn-rose "
{% endblock %}

{% block contenu %}

	<div class="container">

		<div class="row sous-categorie">

			<div class="col-md-7 offset-md-1">
				<br>
				<h1>
					Liste des appareils à acheter
				</h1>
				{% for annonce in annonces %}

					<br>
					<div class="card">
						<div class="card-body text-center text-md-left">
							<div class="row">
								<div class="col-md-2">
									<img src="./css/images/phone1.jpg" class="image_produit" alt="photo produit">
								</div>
								<div class="col-md-9 offset-md-1">
									<h3>
										{{annonce.titre}}
									</h3>
									<h4>
										{{ annonce.prix }}
										€
									</h4>
									<p class="text-justify text-center text-md-left">

										{{ annonce.texteannonce | slice(0, 50) }} ...

									</p>
									<a href=" {{ path('produit', {'id': annonce.id} ) }}">

										<button class="btn-rose btn btn-primary" name="bouton voir produit" type="button">
											Voir le produit
										</button>
									</a>
								</div>
							</div>
						</div>
					</div>
					<br>
				{% endfor %}
			</div>

			<br>
			{#
																																																																							<div class="col-md-4">
																																																																				</div> #}
			<br>
		</div>
	</div>
	<br>
	{{ knp_pagination_render(annonces) }}
	<nav aria-label="Page navigation example">
		<ul class="pagination justify-content-center">
			<li class="page-item ">
				<a class="page-link" href="#" tabindex="-1">
					Précédente
				</a>
			</li>
			<li class="page-item active">
				<a class="page-link" href="#">
					1
					<span class="sr-only">
						(current)
					</span>
				</a>
			</li>
			<li class="page-item ">
				<a class="page-link" href="#">
					2
				</a>
			</li>
			<li class="page-item">
				<a class="page-link" href="#">
					3
				</a>
			</li>
			<li class="page-item">
				<a class="page-link" href="#">
					Suivante
				</a>
			</li>
		</ul>
	</nav>


{% endblock %}

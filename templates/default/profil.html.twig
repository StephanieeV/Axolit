{% extends "layout.html.twig" %}

{% block link_css %}
	<link href="{{asset('css/profil.css')}}" rel="stylesheet">
{% endblock %}
{% block titre_page %}
	Axolit - Profil
{% endblock %}
{% block accueil %}
	class="btn btn-rose"
{% endblock %}
{% block vendre %}
	class="btn btn-rose "
{% endblock %}
{% block acheter %}
	class="btn btn-rose "
{% endblock %}
{% block reparer %}
	class="btn btn-rose "
{% endblock %}
{% block contenu %}


	{% if userProfile %}
		<div class="container">
			<div class="row justify-content-center">
				<div class="card col-md-8">
					<div class="card-body">

						<div class="row">
							<div class="col-md-4">
								<img src="{{asset('css/svg/icone/reparer.svg')}}" style="width: 50px;" alt="badge de réparateur">
								<img src="{{asset('css/svg/icone/vendre.svg')}}" style="width: 50px;" alt="badge de réparateur">
							</div>

							<div class="col-md-4">
								<div class="row justify-content-center">
									{% if app.user %}
										<div class="mb-3">
											Vous êtes connecté en tant que

											{{ app.user.nom }}
											{{app.user.prenom}}
											,
											<a href="{{ path('app_logout') }}">
												Logout
											</a>
										</div>
									{% endif %}

									<div class="card text-center" style="width: 20rem;">
										<img class="card-img-bottom">
										<img src="{{asset(userProfile.photoprofil)}}" style="max-width: 237px; max-height: 237px;" class="photo_profil">

										<div class="card-body ">
											<h3 class="card-title">

												{{ userProfile.pseudo }}

											</h3>

											<h4 class="card-text">
												<img src="{{asset('css/svg/icone/localisation.svg')}}" alt="icone localisation">
												{% if userProfile.Ville == null %}
													France
												{% else %}
													{{ userProfile.Ville }}
												{% endif %}


											</h4>
										</div>
									</div>
								</div>
							</div>
						</div>

						<br>

						<div class="row justify-content-center">
							<div class="col-md-4">
								<table>
									<tr>
										<img src="{{asset('./css/svg/icone/telephone.svg')}}" style="width: 40px;">
									</tr>
									<tr>
										<button class="btn-rose btn btn-primary" type="button" data-toggle="modal" data-target=".bd-numero-modal-sm">
											Voir le numéro
										</button>
										<div class="modal fade bd-numero-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
											<div class="modal-dialog modal-sm">
												<div class="modal-content">
													<div class="modal-body">
														{% block numeroTelephone %}
														{% endblock %}
														<button type="button" class="close" data-dismiss="modal">
															<span>
																&times;
															</span>
														</div>
													</div>
												</div>
											</div>
										</tr>
									</tr>
								</table>
							</div>
							<div class="col-md-4">
								<table>
									<tr>
										<img src="{{asset('css/svg/icone/mail.svg')}}" style="width: 40px;">
									</tr>
									<tr>
										<button class="btn-rose btn btn-primary" type="button" data-toggle="modal" data-target=".bd-mail-modal-sm">
											Envoyer un mail
										</button>
										<div class="modal fade bd-mail-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
											<div class="modal-dialog modal-sm">
												<div class="modal-content">
													<div class="modal-body">
														{% block adresseMail %}
														{% endblock %}
														<button type="button" class="close" data-dismiss="modal">
															<span>
																&times;
															</span>
														</div>
													</div>
												</div>
											</div>
										</tr>
									</tr>
								</table>
							</div>
							<div class="col-md-4">
								<table>
									<tr>
										<img src="{{asset('css/svg/icone/favoris.svg')}}" style="width: 40px;">
									</tr>
									<tr>
										<a href="#">
											<button class="btn-rose btn btn-primary" type="button">
												Ajouter à ma liste
											</button>
										</a>
									</tr>
								</table>
							</div>

						</div>
					</div>
				</div>
			</div>

			<br>

			<div class="col-md-8 offset-md-2">

				<h2>
					Compétences
				</h2>

				<p class="text-justify">
					<ul>
						{% block competences %}
						{% endblock %}
					</ul>
				</p>

				<br>

				<br>
				<h2>
					Autres réparateurs
				</h2>
				<br>

				<div class="row">
					<div class="col-md-6">
						<div class="card">
							<div class="card-body text-center text-md-left">
								<div class="row">
									<div class="col-md-2">
										<img>
										{% block autreReparateur1PhotoProfil %}
											src="
											{{asset('css/images/profil/photo_profil1.jpg')}}
											"
										{% endblock %}
										style="width: 90px; height: 90px;"
									</div>
									<div class="col-md-8 offset-md-2">
										<h5 class="card-title">
											{% block autreReparateur1Nom %}
											{% endblock %}
										</h5>
										<h6 class="card-text">
											<img src="{{asset('css/svg/icone/localisation.svg')}}" alt="icone de localisation">
											{% block autreReparateur1Ville %}
											{% endblock %}
										</h6>
										<a>
											{% block pageProfil1 %}
											{% endblock %}
											<button class="btn-rose btn btn-primary btn-sm" type="button">
												Voir le profil
											</button>
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>

					<div class="col-md-6">
						<div class="card">
							<div class="card-body text-center text-md-left">
								<div class="row">
									<div class="col-md-2">
										<img>
										{% block autreReparateur2PhotoProfil %}
											src="
											{{asset('css/images/profil/photo_profil2.jpg')}}
											"
										{% endblock %}
										style="width: 90px; height: 90px;"
									</div>
									<div class="col-md-8 offset-md-2">
										<h5 class="card-title">
											{% block autreReparateur2Nom %}
											{% endblock %}
										</h5>
										<h6 class="card-text">
											<img src="{{asset('css/svg/icone/localisation.svg')}}" alt="icone de localisation">
											{% block autreReparateur2Ville %}
											{% endblock %}
										</h6>
										<a>
											{% block pageProfil2 %}
											{% endblock %}
											<button class="btn-rose btn btn-primary btn-sm" type="button">
												Voir le profil
											</button>
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>


				</div>
			</div>
		</div>
	</div>


{% else %}
	SO sorry UWU  no user was found
{% endif %}{% endblock %}

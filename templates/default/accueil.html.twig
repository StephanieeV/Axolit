{% extends "layout.html.twig" %}

{% block link_css %}
	<link href="{{asset('css/accueil.css')}}" rel="stylesheet">
{% endblock %}

{% block accueil %}
	class="btn btn-rose  active"
{% endblock %}
{% block vendre %}
	class="btn btn-rose "
{% endblock %}
{% block acheter %}
	class="btn btn-rose "
{% endblock %}
{% block reparer %}
	class="btn btn-rose "
{% endblock %}

{% block titre_page %}
	Axolit - Accueil
{% endblock %}

{% block contenu %}
	<div id="banniere">
		<div class="texte-ban">
			<h1>
				Bienvenue sur AxoliT !
			</h1>
			<h2>
				Vend, Achète, Répare
			</h2>
			<br>
			<h3>
				Participez à la préservation de la planète en réparant vos appareils cassés ou vendez les !
			</h3>
		</div>
	</div>

	<div id="banniere_smartphone">
		<div class="card">
			<div class="card-body">
				<h1 class="card-title text-center">
					Bienvenue sur AxoliT !
				</h1>
				<h2 class="card-text text-center">
					Vend, Achète, Répare
				</h2>
				<div class="col-xs-3">
					<form class="form-inline justify-content-center">
						<input class="form-control mr-sm-2" type="search" placeholder="Rechercher" aria-label="Search">
						<button class="btn bouton-search" name="rechercher" type="submit">
							Rechercher
						</button>
					</form>
				</div>
			</div>
		</div>
	</div>

	<!-- ============================================================================================================================ -->
	<div class="content">
		<div class="categorie">
			<h3>
				<span class="trait">
					Démarre ton Projet
				</span>
			</h3>
			<div class="container sous-categorie">
				<div class="row justify-content-center">
					<div class="col col-xs-4">
						<table>
							<tr>
								<td>
									<a href="{{path('vendre')}}">
										<img class="badges-grand img-fluid repare" alt="badge vendre" src="./css/svg/icone/vendre.svg">
									</a>
								</td>

							</tr>
							<tr>
								<td>
									<a href="{{path('vendre')}}">
										<button class="btn-rosea btn-rose btn btn-primary" name="vendre" type="button">
											Vendre
										</button>
									</a>

								</td>
							</tr>
						</table>
					</div>
					<div class="col col-xs-4">
						<table>
							<tr>
								<td>
									<a href="{{path('liste_produits')}}">

										<img class="badges-grand img-fluid repare" alt="badge acheter" src="./css/svg/icone/acheter.svg">
									</a>
								</td>
							</tr>
							<tr>
								<td>
									<a href="{{path('liste_produits')}}">

										<button class="btn-rosea btn-rose btn btn-primary" name="acheter" type="button">
											Acheter
										</button>
									</a>
								</td>
							</tr>
						</table>
					</div>
					<div class="col-auto col-xs-4">
						<table>
							<tr>
								<td>
									<a href="{{path('liste_reparation')}}">

										<img id="repare" class="badges-grand img-fluid repare" alt="badge reparer" src="./css/svg/icone/reparer.svg">
									</a>
								</td>
							</tr>
							<tr>
								<td>
									<a href="{{path('liste_reparation')}}">

										<button class="btn-rosea btn-rose btn btn-primary" name="reparer" type="button">
											Réparer
										</button>
									</a>
								</td>
							</tr>
						</table>
					</div>

				</div>
			</div>
		</div>
		<div>
			{# {% for annonce in dernieres_annonces %}
			
			
							{{annonce.textannonce}}
			
						{% endfor %} #}
		</div>

		<div class="carouselProduit">
			<h3>
				<span class="trait">
					Dernières annonces mises en ligne
				</span>
			</h3>
			<div class="lecarousel">
				<div id="Indicators" class="carousel slide" data-ride="carousel">
					<ol class="carousel-indicators">
						<li data-target="#Indicators" data-slide-to="0" class="active"></li>
						<li data-target="#Indicators" data-slide-to="1"></li>
						<li data-target="#Indicators" data-slide-to="2"></li>
					</ol>
					<div class="carousel-inner">
						{% for derniere_annonce in dernieres_annonces|slice(-3, 3) %}
							{% if loop.index == 1 %}
								<div class="carousel-item active">
							{% else %}
								<div class="carousel-item ">
							{% endif %}
							<a href=" {{ path('produit', {'id': derniere_annonce.id} ) }}">
							{% if derniere_annonce.photoannonces.first != null %}
								<img src="{{ derniere_annonce.photoannonces.first }}" class="image_produit">
							{% else %}
								<img src="{{asset('./img/profil/photo_profil.jpg')}}" class="image_produit">
							{% endif %}
								<div class="carousel-caption d-block">
									<h5>
										{{ derniere_annonce.titre }}
									</h5>
									<p>
										{{ derniere_annonce.texteannonce | slice(0, 50) }}...
									</p>
								</div>
							</a>
						</div>
						{% endfor %}
					</div>
					<a class="carousel-control-prev" href="#Indicators" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">
							Previous
						</span>
					</a>
					<a class="carousel-control-next" href="#Indicators" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">
							Next
						</span>
					</a>
				</div>
			</div>
		</div>


		<div id="LastAnnoncesPC" class="categorie">
			<h3>
				<span class="trait">
					Dernières annonces mises en ligne
				</span>
			</h3>
			<div class="photo_last_annonces">
				<div class="sous-categorie container">
					<div class="row justify-content-center ">
						{% for derniere_annonce in dernieres_annonces|slice(-3, 3) %}
						<div class="col-auto">
							<a href=" {{ path('produit', {'id': derniere_annonce.id} ) }}">
								<p class="photo-annonces">
									{% if derniere_annonce.photoannonces.first != null %}
										<img src="{{ derniere_annonce.photoannonces.first }}" class="image_produit">
									{% else %}
										<img src="{{asset('./img/profil/photo_profil.jpg')}}" class="image_produit">
									{% endif %}
									<span class="texte-photo">
										<u>
											{{ derniere_annonce.titre }}
										</u>
										<br>
										{{ derniere_annonce.texteannonce | slice(0, 50) }}...
									</span>
								</p>
							</a>
						</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>


		<div class="categorie">
			<h3>
				<span class="trait">
					Retrouve nous sur les réseaux sociaux !
				</span>
			</h3>
			<div class="sous-categorie">
				<a href="https://twitter.com/AxolitFr">
					<img class="btn-reseaux-sociaux-body img-fluid" alt="lien et icone twitter" src="./css/svg/icone/twitter.svg">
				</a>
				<a href="https://www.facebook.com/AxoIIT/">
					<img class="btn-reseaux-sociaux-body img-fluid" alt="lien et icone facebook" src="./css/svg/icone/facebook.svg">
				</a>
			</div>
		</div>
	</div>
</div>{% endblock %}
